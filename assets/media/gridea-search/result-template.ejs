<div id="app" class="antialiased flex flex-col min-h-screen">
  <div class="max-w-4xl w-full mx-auto ">
    <div class="shadow-box bg-white dark:bg-gray-600 border-gray-300 rounded-none md:rounded-lg -mx-1 md:mx-0 md:px-0"><% posts.forEach(function(post, index) { %>
  <div class="p-8 border-b border-gray-200 dark:border-gray-700 flex relative overflow-hidden flex-col md:flex-row animated fadeIn">
    <% if (post.isTop) { %>
      <i class="ri-star-line text-orange-200 absolute text-2xl left-0 ml-1 rotate-90"></i>
    <% } %>
    <div class="flex-1 order-2 md:order-1">
      <h2 class="text-2xl font-semibold mb-4">
        <a href="<%= post.link %>" class="text-gray-700 dark:text-gray-200 border-b-2 border-dotted border-gray-200 dark:border-gray-400 dark:hover:border-gray-200 hover:border-gray-600 transition-all duration-100">
          <%= post.title %>
        </a>
      </h2>
      <div class="mb-4 text-xs text-gray-500"><%= post.dateFormat %></div>
      <div class="mb-4 text-gray-500 dark:text-gray-300">
        <%- post.abstract || post.description %>
      </div>
    </div>
    <% if (themeConfig.showFeatureImage && post.feature) { %>
      <img class="flex-shrink-0 self-start md:ml-4 mb-4 md:mb-0 rounded-sm object-cover featured-img order-1 md:order-2 w-full h-40 md:w-56 md:h-32" loading="lazy" src="<%= post.feature %>" alt="<%= post.title %>">
    <% } %>
  </div>
<% }); %>
</div>
</div>
</div>